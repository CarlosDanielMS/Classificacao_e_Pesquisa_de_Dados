class HashTable:
    def __init__(self, size):
        self.size = size
        self.table = {i: [] for i in range(size)}
    
    def _hash(self, key):
        """Função de hash simples"""
        return hash(key) % self.size
    
    def insert(self, **kwargs):
        """Insere múltiplos valores na hash table"""
        for key, value in kwargs.items():
            index = self._hash(key)
            if value not in self.table[index]:
                self.table[index].append(value)
    
    def search(self, key, value):
        """Busca um valor na hash table"""
        index = self._hash(key)
        return value in self.table[index]
    
    def delete(self, key, value):
        """Remove um valor da hash table"""
        index = self._hash(key)
        if value in self.table[index]:
            self.table[index].remove(value)
    
    def __str__(self):
        return str(self.table)


htable = HashTable(10)
htable.insert(nome="relatorio.pdf", Caminho="/documentos/relatorio.pdf", Tamanho=1024)

print("Tabela hash após inserções:", htable)
print("Buscar por 'relatorio.pdf' na hash:", htable.search("nome", "relatorio.pdf"))
htable.delete("nome", "relatorio.pdf")
print("Tabela hash após remoção de 'relatorio.pdf':", htable)
